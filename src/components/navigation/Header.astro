---
import { menu } from "../../data/menu";
---

<header class="fixed inset-x-0 top-0 z-30 mx-auto max-w-7xl backdrop-blur-sm transition-all duration-200">
  <div role="tablist" class="rounded-lg w-fit mx-auto mt-4 tabs tabs-boxed bg-gray-300 bg-clip-padding backdrop-filter backdrop-blur bg-opacity-10 saturate-100 backdrop-contrast-100">
    {
      menu.map(option => (
        <a role="tab" class="tab transition-all duration-300 hover:tab-active" href={option.href}>
          {option.title}
        </a>
      ))
    }
  </div>
</header>