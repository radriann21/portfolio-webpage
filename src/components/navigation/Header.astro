---
import { menu } from "../../data/menu";
---

<header id="header" class="opacity-0 -translate-y-10 fixed inset-x-0 top-0 z-30 mx-auto max-w-7xl">
  <div role="tablist" class="rounded-lg w-fit mx-auto mt-4 tabs tabs-boxed bg-gray-300 bg-clip-padding backdrop-filter backdrop-blur bg-opacity-10 saturate-100 backdrop-contrast-100">
    {
      menu.map(option => (
        <a role="tab" class="tab transition-all duration-300 hover:bg-gray-300 hover:bg-opacity-10" href={option.href}>
          {option.title}
        </a>
      ))
    }
  </div>
</header>

<script>
  import { inView, animate } from 'motion'

  inView('#header', (info) => {
    animate(
      info.target, 
      { opacity: 1, transform: "translateY(0)" },
      { duration: 0.8 }
    )
  })
</script>